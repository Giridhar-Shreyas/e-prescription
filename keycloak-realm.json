{
    "realm": "eprescription-realm",
    "enabled": true,
    "sslRequired": "none",
    
    "clients": [
      {
        "clientId": "eprescription-client",
        "enabled": true,
        "clientAuthenticatorType": "client-secret",
        "secret": "eprescription-secret",
        "redirectUris": [
          "http://localhost:4321/*",
          "http://localhost:4321/callback",
          "http://127.0.0.1:4321/*",
          "http://127.0.0.1:4321/callback"
        ],
        "webOrigins": [
          "http://localhost:4321",
          "http://127.0.0.1:4321",
          "*"
        ],
        "protocol": "openid-connect",
        "publicClient": false,
        "standardFlowEnabled": true,
        "directAccessGrantsEnabled": true,
        "serviceAccountsEnabled": false
      }
    ],
    
    "roles": {
      "realm": [
        {
          "name": "doctor"
        },
        {
          "name": "user"
        },
        {
          "name": "pharmacist"
        }
      ]
    }
  }